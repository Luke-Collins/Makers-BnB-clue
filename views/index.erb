<h1>Welcome to MakersBnB</h1> 

<h2>
  <%= flash[:notice] %>
</h2>

<% if @user %>
  <h2>Welcome, <%= @user.email %></h2>
  <form action="/sessions/destroy" method="post">
    <input type="submit" value="Sign Out" />
  </form>
<% elsif @user.nil? %>
  <form action="/users/new">
    <input type="submit" value="Sign Up" />
  </form>
  <form action="/sessions/new">
    <input type="submit" value="Sign In" />
  </form>
<% end %>

<ul>
  <% @rooms.each do |room| %>
    <li class='room'>
      <%= "#{room.address}, #{room.description}, #{room.price_per_night}, Available between: #{room.start_date} and #{room.end_date}" %>
      <% if @user %>
        <form action='/bookingcompleted' method='post'>
          <input type="hidden" name="room_id" value="<%= room.id %>">
          <input type='date' name='date'/>
          <input type='submit' name='Book' />
        </form>
      <% else %>
        <form action='/users/new' method='post'>
          <input type="hidden" name="room_id" value="<%= room.id %>">
          <input type='submit' name='Book' />
        </form>
      <% end %>
    </li>
  <% end %>
</ul>

<% if @user %>
  <form action="/newlisting" method='post'>
    <input type="submit" value="Add a Listing" />
  </form>
<% end %>
